<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector=":is(Control).mt-md">
        <Setter Property="Margin" Value="0 10 0 0"/>
    </Style>

    <Style Selector=":is(Control).mx-md">
        <Setter Property="Margin" Value="10 0 10 0"/>
    </Style>

    <Style Selector=":is(Control).my-md">
        <Setter Property="Margin" Value="0 10 0 10"/>
    </Style>

    <Style Selector=":is(Control).mx-sm">
        <Setter Property="Margin" Value="2.5 0 2.5 0"/>
    </Style>

    <Style Selector=":is(Control).my-sm">
        <Setter Property="Margin" Value="0 2.5 0 2.5"/>
    </Style>

</Styles>
