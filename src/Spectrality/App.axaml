<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Spectrality.ViewModels"
             x:Class="Spectrality.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <vm:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>

        <FluentTheme/>

        <StyleInclude Source="avares://DialogHost.Avalonia/Styles.xaml"/>
        <StyleInclude Source="avares://OxyPlot.Avalonia/Themes/Default.axaml"/>
        <StyleInclude Source="avares://Semi.Avalonia/Themes/Index.axaml"/>

        <StyleInclude Source="avares://Spectrality/Styles/Margin.axaml"/>
        <StyleInclude Source="avares://Spectrality/Styles/OxyPlot.axaml"/>
        <StyleInclude Source="avares://Spectrality/Styles/Semi.axaml"/>

    </Application.Styles>

</Application>
